{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "vite-plugin-pages/client",
      "./types",
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
  },
  "include": [
    "src/**/*",
    "source-transforms/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
}
